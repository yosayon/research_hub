   <form action ="/create_report" method="POST">
     <h3 align="left">Companies</h3>
     <label>Report Name:</label>
     <input type="text" name="report[name]" required>
     <label>Description:</label>
     <input type="text" name="report[description]" required>
     <br><br>
     <% Company.all.each do |company| %>
      <input type="checkbox" name="company_ids[]" value="<%=company.id%>"><%= company.name %>
     <%end%>
     <h3>Dimensions</h3>
     <% Dimension.all.each do |dimension| %>
     <li><%= dimension.name %><input type="checkbox" name="dimension_ids[]" value="<%=dimension.id%>">
     </li>
     <%end%>
     <h3>Statements</h3>
     <ol>
     <% Statement.all.each do |statement| %>
      <li><%= statement.name %></li><input type="checkbox" name="statement_ids[]" value="<%=statement.id%>">
     <%end%>
     </ol>
     </div>
     <input type="submit" value="create">
		 </form>
		 

 